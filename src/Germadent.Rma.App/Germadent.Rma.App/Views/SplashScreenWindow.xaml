<Window x:Class="Germadent.Rma.App.Views.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Germadent.Rma.App.Views"
        xmlns:designMock="clr-namespace:Germadent.Rma.App.Views.DesignMock"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        Height="400" Width="700"
        d:DataContext="{d:DesignInstance Type={x:Type designMock:DesignMockSplashScreenViewModel}, IsDesignTimeCreatable=True}">
    <Grid>
        <Image Source="../logo.png" Width="576" Height="88"/>

        <TextBlock VerticalAlignment="Bottom" Text="{Binding Text}" Margin="0,0,0,12" HorizontalAlignment="Center" />
    </Grid>
</Window>
