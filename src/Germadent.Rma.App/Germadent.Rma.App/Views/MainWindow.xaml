<Window x:Class="Germadent.Rma.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Germadent.Rma.App"
        xmlns:properties="clr-namespace:Germadent.Rma.App.Properties"
        mc:Ignorable="d"
        Title="{x:Static properties:Resources.AppTitle}" 
        MinWidth="800"
        Width="800"
        MinHeight="600"
        Height="600"
        WindowStartupLocation="CenterScreen"
        Background="{x:Static SystemColors.ControlBrush}">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical">
            <TextBlock Text="Создание заказ-нарядов" VerticalAlignment="Center" FontSize="10"/>
            <Button Content="Ферезерный центр" Margin="0,6,0,0"/>
            <Button Content="Лаборатория" Margin="0,6,0,0"/>

            <TextBlock Text="Работа с данными" VerticalAlignment="Center" Margin="0,24,0,0" FontSize="10"/>
            <Button Content="Фильтр" Margin="0,6,0,0"/>
            <Button Content="Экспорт" Margin="0,6,0,0"/>
        </StackPanel>

        <DataGrid Grid.Column="1" Margin="6,0,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" MinWidth="100"/>
                <DataGridTextColumn Header="Сотрудник" Width="*"/>
                <DataGridTextColumn Header="Заказчик" Width="*"/>
                <DataGridTextColumn Header="Пациент" Width="*"/>
                <DataGridTextColumn Header="Материал" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
